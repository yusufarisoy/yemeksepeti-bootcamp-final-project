<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.owner.restaurant.OwnerRestaurantFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="@dimen/space_16"
        android:paddingVertical="@dimen/space_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBannerImage"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imageViewBanner"
                android:scaleType="fitXY"
                android:src="@color/gray_800"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="background"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:elevation="@dimen/space_4"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            android:src="@drawable/store"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="116dp"
            android:layout_marginStart="@dimen/space_32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textViewTitle"
            android:text="@string/title_add_restaurant"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black_800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            app:layout_constraintTop_toBottomOf="@id/cardViewBannerImage"
            app:layout_constraintStart_toEndOf="@id/imageView"/>

        <TextView
            android:id="@+id/textViewLabelCity"
            android:textColor="@color/black_800"
            android:textSize="16sp"
            android:text="@string/hint_select_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32"
            android:layout_marginTop="@dimen/space_64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"/>

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            app:layout_constraintStart_toStartOf="@id/textViewLabelCity"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelCity"/>

        <TextView
            android:id="@+id/textViewLabelDistrict"
            android:textColor="@color/black_800"
            android:textSize="16sp"
            android:text="@string/hint_select_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_32"
            android:layout_marginTop="@dimen/space_32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerCity"/>

        <Spinner
            android:visibility="gone"
            android:id="@+id/spinnerDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            app:layout_constraintStart_toStartOf="@id/textViewLabelDistrict"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelDistrict"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutImage"
            android:hint="@string/hint_image_url"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_32"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/spinnerDistrict"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonPreviewImage">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextImage"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPreviewImage"
            android:text="@string/btn_preview"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange"
            app:cornerRadius="@dimen/space_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textInputLayoutImage"
            app:layout_constraintBottom_toBottomOf="@id/textInputLayoutImage"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutBannerImage"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            android:hint="@string/hint_banner_image_url"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginHorizontal="@dimen/space_16"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonPreviewBannerImage">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextBannerImage"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPreviewBannerImage"
            android:text="@string/btn_preview"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/space_32"
            app:backgroundTint="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textInputLayoutBannerImage"
            app:layout_constraintBottom_toBottomOf="@id/textInputLayoutBannerImage"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutName"
            android:hint="@string/hint_restaurant_name"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginHorizontal="@dimen/space_16"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutBannerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPhoneNumber"
            android:hint="@string/hint_phone_number"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginHorizontal="@dimen/space_16"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPhoneNumber"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutMinOrderFee"
            android:hint="@string/hint_min_order_fee"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginHorizontal="@dimen/space_16"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMinOrderFee"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAvgDeliveryTime"
            android:hint="@string/hint_avg_delivery_time"
            app:boxStrokeColor="@color/gray_600"
            app:hintTextColor="@color/gray_600"
            app:errorTextAppearance="@style/customTextInputLayoutError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginHorizontal="@dimen/space_16"
            app:boxCornerRadiusTopStart="@dimen/space_16"
            app:boxCornerRadiusTopEnd="@dimen/space_16"
            app:boxCornerRadiusBottomStart="@dimen/space_16"
            app:boxCornerRadiusBottomEnd="@dimen/space_16"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutMinOrderFee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAvgDeliveryTime"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            android:text="@string/btn_cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/space_32"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_8"
            android:backgroundTint="@color/gray_800"
            app:layout_constraintEnd_toStartOf="@id/buttonSave"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAvgDeliveryTime" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:text="@string/btn_save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/space_32"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_blue"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAvgDeliveryTime" />

        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:id="@+id/buttonDelete"
            android:text="@string/btn_delete_restaurant"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/space_32"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_red"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginHorizontal="@dimen/space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonSave" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>